        <initial_condition>
          <cpp>
            <string_value lines="20" type="code" language="python">def val(t):
  return "cos(pi*x[0]/1.0e6)"</string_value>
          </cpp>
        </initial_condition>
      </scalar_field>
      <scalar_field name="FreeSurfaceMean">
        <value>
          <constant>
            <real_value rank="0">1e3</real_value>
          </constant>
        </value>
      </scalar_field>
    </core_fields>
    <equations>
      <continuity_equation>
        <spatial_discretisation>
          <continuous_galerkin/>
        </spatial_discretisation>
        <integrate_by_parts/>
      </continuity_equation>
      <momentum_equation>
        <spatial_discretisation>
          <continuous_galerkin>
            <stabilisation>
              <no_stabilisation/>
            </stabilisation>
          </continuous_galerkin>
        </spatial_discretisation>
        <mass_term/>
        <advection_term/>
      </momentum_equation>
    </equations>
  </system>
